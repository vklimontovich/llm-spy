generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthKey {
  id        String    @id @default(cuid())
  key       String    @unique
  deletedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([key])
  @@map("auth_keys")
}

model User {
  id    String @id @default(cuid())
  email String @unique

  @@map("users")
}

model UserProvisionRule {
  id          String   @id @default(cuid())
  ruleType    String   @map("rule_type")
  ruleOptions Json     @map("rule_options")
  createdAt   DateTime @default(now())

  @@index([ruleType])
  @@map("user_provision_rules")
}

model Upstream {
  id            String         @id @default(cuid())
  name          String         @unique
  url           String?
  headers       Json?
  inputFormat   String         @default("auto") @map("input_format")
  outputFormat  String?        @map("output_format")
  deletedAt     DateTime?      @map("deleted_at")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  otelUpstreams OtelUpstream[]

  @@map("upstreams")
}

model OtelUpstream {
  id         String   @id @default(cuid())
  url        String
  headers    Json?
  upstreamId String
  upstream   Upstream @relation(fields: [upstreamId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([upstreamId])
  @@map("otel_upstreams")
}

model Response {
  id              String   @id @default(cuid())
  url             String
  method          String
  status          Int      @default(200)
  requestBody     Bytes?
  responseBody    Bytes?
  requestHeaders  Json
  responseHeaders Json
  sessionId       String?
  public          Boolean  @default(false)
  createdAt       DateTime @default(now())

  @@index([sessionId])
  @@index([public])
  @@map("responses")
}
